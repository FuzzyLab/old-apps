<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#B00" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_margin="2dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="Snooze Time(min):"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/snoozeList"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:entries="@array/snoozelist" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#B00" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_margin="2dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="bottom"
                        android:text="Notification Tone:"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/toneName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="top"
                        android:text="Tone Name"
                        android:textColor="#B00"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/pickTone"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@drawable/datebutton"
                android:text="PICK"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#B00" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_margin="2dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="Vibrate: "
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/vibrateCheck"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:entries="@array/snoozelist" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#B00" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_margin="2dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="Light: "
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/lightCheck"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:entries="@array/snoozelist" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#B00" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_margin="2dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="18sp" />

            <Button
                android:id="@+id/saveSettings"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="2"
                android:background="@drawable/timebutton"
                android:text="SAVE"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>